<Window x:Class="HeBianGu.App.ImagePlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HeBianGu.App.ImagePlayer"
        xmlns:imageview="clr-namespace:HeBianGu.General.ImageView;assembly=HeBianGu.General.ImageView"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="800">

    <TabControl>
        <TabItem Header="鼠标滚轮放大">
            <Grid>
                <imageview:ImageBase ImageSource="https://mtl.gzhuibei.com/images/img/21547/23.jpg" OperateType="Default"/>

            </Grid>
        </TabItem>

        <TabItem Header="标定范围放大">
            <Grid>
                <imageview:ImageBase ImageSource="https://mtl.gzhuibei.com/images/img/21547/23.jpg" OperateType="Enlarge"/>
            </Grid>
        </TabItem>

        <TabItem Header="标定范围">
            <Grid>
                <imageview:ImageBase ImageSource="https://mtl.gzhuibei.com/images/img/21547/23.jpg" OperateType="Sign"/>
            </Grid>
        </TabItem>

        <TabItem Header="气泡放大">
            <Grid>
                <imageview:ImageBase ImageSource="https://mtl.gzhuibei.com/images/img/21547/23.jpg" OperateType="Bubble"/>
            </Grid>
        </TabItem>
    </TabControl>
 
</Window>
